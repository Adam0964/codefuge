<% provide(:title, 'Forgot_password' ) %>

<div class="container">   
            <div class="span3"> 

            	<div class="signup">
                        <div class='sup'>
								<div class='sign-header'> 
                            	    <p>
                            	    	Welcome to Kodefuge
                            	    </p>
                            	    <br />
									<h4><%= render "devise/shared/links" %> Forgot your password?</h4>
							</div>

								<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
								  <%= devise_error_messages! %>

								  <div><%= f.label :email %><br />
								  <%= f.email_field :email, :autofocus => true %></div><br />

								  <div><%= f.submit "Password reset instructions", :class => "btn btn-large btn-primary"%></div>
								<% end %>

								<%#<%= render "devise/shared/links" %>
						</div>
				</div>
			</div>
</div
